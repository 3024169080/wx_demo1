/* pages/shop/shop.wxss */
.cont{
  background:#666;
  height:300rpx;
}
.bg{
  width:100%;
  position:absolute;
  top: 0;
  left: 0;
  filter: blur(20px);
  z-index:1;
}
.tab{
  width:100%;
  height:100rpx;
  background: #fff;
  position: relative;
  z-index:10;
  border-bottom:1rpx solid #f5f5f5;
  display:flex;
  justify-content: space-around;
}
.tab view{  
  color: #333;
}
.tab view text{
  display:block;
  margin-top:10rpx;
  font-size:35rpx;
  padding:10rpx 0;
  border-bottom:6rpx solid transparent;
}
.tab view .active{
  border-color:#3190e8;
  color: #3190e8;
}
.topinfo{
  padding:20rpx;
  position:relative;
  z-index:2;
  display: flex;
}
.topinfo image{
  width:150rpx;
  height:150rpx;
  flex-shrink:0;
}
.topinfo .shopname{
  margin-left:30rpx;
}
.shopname{
  display:flex;
  flex-direction:column;
  justify-content: space-between;
  color: #fff;
}
.shopname view:nth-child(1){
  font-size:40rpx;
  font-weight:bold;
}
.shopname view{
  margin:4rpx 0;
}
.shopname view{
  font-size:26rpx;
}
.main{
  position:absolute;
  top:280rpx;
  left:0;
  right:0;
  bottom:0;
  display:flex;
  z-index:2;
  background: #fff;
}
.main-nav{
  width:30%;
}
.main-nav view{
  box-sizing:border-box;
  padding-left:20rpx;
  height:140rpx;
  line-height:140rpx;
  background: #f8f8f8;
  border-bottom:1rpx solid #ededed;
  border-left:8rpx solid transparent;
  white-space:normal;
  overflow:hidden;
  text-overflow:ellipsis;
}
.main-nav .active{
  background: #fff;
  border-left:8rpx solid #3190e8;
}
.content{
  width:70%;
}
.cont-tit{
  font-size:40rpx;
  color: #666;
  font-weight:bold;
  padding-left:20rpx;
  background: #ededed;
  line-height:100rpx;
}
.cont-tit text{  
  color: #999;
  padding-left:20rpx;
}
.cont-food{
  padding:20rpx;
  display:flex;
  /* justify-content:space-between; */
  border-bottom: 1rpx solid #e5e5e5;
}
.cont-food image{
  width:100rpx;
  height:100rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}
.food-info{
  width:100%;
}
.food-info view{
  margin:10rpx 0;
}
.food-info .name{
  font-size:40rpx;
  font-weight:bold;
  color:#333;
  width:50%;
  white-space:nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}
.food-info .description{
  color: #999;
  font-size:24rpx;
}

.food-info .item text{
  font-size:20rpx;
}
.food-info .price{
  display: flex;
  justify-content: space-between;
}
.food-info .price text:nth-child(1){
  font-size: 40rpx;
  font-weight:bold;
  color: #f60;
}
.food-info .price text:nth-child(1) text{
  padding-left:10rpx;
  font-size:28rpx;
  color: #666;
}
.food-info .price text:nth-child(2){
  display:inline-block;
  padding:10rpx;
  background:#3190e8;
  color:#fff;
  border-radius:20rpx;
}