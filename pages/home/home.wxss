/* pages/home/home.wxss */
.body view{
  background: #fff;
}
.city-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height:64rpx;
  padding: 20rpx;
  font-size:28rpx;
  color:#666;
  border-bottom:1rpx solid #e5e5e5;
}
.city{  
  display: flex;
  justify-content: space-between;
  padding:10rpx 20rpx;
  border-bottom:2rpx solid #e4e4e4;
  margin-bottom:15rpx;
}
.city-cit{
  color: #3190e8;
}
.hotcitise .hot-tit ,.cit .cit-tit{
  display:block;
  padding:20rpx;
  border-bottom:1rpx solid #eee;
}
.hotlist ,.cit-list{
  width: 100%;
  display: flex;
  flex-wrap:wrap;
}
.cit-list .cit-list-txt{
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;  
}
.hotlist .hot-txt,.cit-list .cit-list-txt{
  color:#3190e8;
  width: 25%;
  line-height:60rpx; 
  text-align: center;
  border-right:1rpx solid #eee;
  border-bottom:1rpx solid #eee;
}
.hotlist .hot-txt:nth-child(4n),.cit-list .cit-list-txt:nth-child(4n){
  border-right:none;
}